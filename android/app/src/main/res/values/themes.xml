<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme for Light Mode -->
    <style name="Theme.Gmailish" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/text_primary_light</item>
        <item name="colorPrimaryVariant">@color/teal_variant</item>
        <item name="colorOnPrimary">@color/icon_tint</item>
        <item name="colorAccent">@color/copyColor</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/fab_icon_tint</item>

        <!-- Control default tint color -->
        <item name="colorControlNormal">@color/label_icon</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" >@color/teal_variant</item>
        <item name="android:textColorHint">#000000</item>

    </style>

    <style name="Theme.App.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="cornerRadius">24dp</item>
        <item name="android:windowBackground">@drawable/compose_background</item>
    </style>


</resources>

